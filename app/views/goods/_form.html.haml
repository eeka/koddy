= form_for @good do |f|
  - if @good.errors.any?
    #error_explanation
      %h2= "#{pluralize(@good.errors.count, "error")} prohibited this good from being saved:"
      %ul
        - @good.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :category_id
    = f.select :category_id, Category.all.collect {|x| [x.name, x.id]}

  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :photo
    = f.text_field :photo
  .actions
    = f.submit 'Save'
